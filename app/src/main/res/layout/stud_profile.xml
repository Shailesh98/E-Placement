<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ccc"
    tools:openDrawer="start"
    android:id="@+id/drawer">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/design_default_color_primary"
            >

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/defaultprofilepic" />

            <TextView
                android:id="@+id/fullName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/profilePic"
                android:layout_centerHorizontal="true"
                android:layout_margin = "10dp"
                android:hint="Loading"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"

            android:background="@color/white"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:text="First Name: "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/firstName_pf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:hint="Loading"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <View
                    android:id="@+id/divider_fname"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/firstName_pf"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Middle Name: "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/divider_fname"
                    />

                <TextView
                    android:id="@+id/middleName_pf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider_fname"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:hint="Loading"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/middleName_pf"
                    android:id="@+id/divider_mname"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Last Name: "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/divider_mname"
                    />

                <TextView
                    android:id="@+id/lastName_pf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider_mname"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:hint="Loading"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/lastName_pf"
                    android:id="@+id/divider_lname"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Email: "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/divider_lname"
                    />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider_lname"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:hint="Loading"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/email"
                    android:id="@+id/divider_em"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Contact no: "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/divider_em"
                    />

                <TextView
                    android:id="@+id/contact_pf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider_em"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:hint="Loading"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/contact_pf"
                    android:id="@+id/divider_contact"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Faculty: "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/divider_contact"
                    />

                <TextView
                    android:id="@+id/faculty_pf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider_contact"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:hint="Loading"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/black"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_below="@id/faculty_pf"
                    android:id="@+id/divider_faculty"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="Semester: "
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/divider_faculty"
                    />

                <TextView
                    android:id="@+id/sem_pf"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/divider_faculty"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:hint="Loading"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                >

                <Button
                    android:id="@+id/update_btn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:layout_marginEnd="120dp"
                    />

                <Button
                    android:id="@+id/delete_btn"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="120dp"
                    android:backgroundTint="#DC143C"
                    android:text="Delete Profile" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/navMenu"
        app:menu="@menu/navigation_menu"
        app:headerLayout="@layout/header"
        android:layout_gravity = "start"
        >

    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>