<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/RexTxt"
        />
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/RexTxt"
        android:layout_marginTop="10dp"
        android:hint="First Name"
        android:textSize="14dp"
        android:id="@+id/f_name"
        />

    <EditText
        android:id="@+id/m_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/f_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Middle Name"
        android:inputType="text"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/l_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/m_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Last Name"
        android:inputType="text"
        android:textSize="14dp" />



    <EditText
        android:id="@+id/email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/l_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/contact_no"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Contact number"
        android:inputType="phone"
        android:textSize="14dp" />

        <EditText
            android:id="@+id/faculty"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@+id/contact_no"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:hint="Faculty Name"
            android:inputType="text"
            android:textSize="14dp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/faculty"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="14dp" />

    <EditText
        android:id="@+id/Repassword"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Re-password"
        android:inputType="textPassword"
        android:textSize="14dp" />




    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Repassword"
        android:layout_centerHorizontal="true"
        android:text="Register"
        android:id="@+id/Register"
        />

    </RelativeLayout>

</ScrollView>