<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProfileActivity"
    android:background="#ccc"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        >

        <TextView
            android:id="@+id/editProfileHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Profile"
        android:textSize="24dp"
            android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
        <TextView
            android:id="@+id/f_name_txt"
            android:layout_below="@+id/editProfileHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/ed_fname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/f_name_txt"
            android:background="@drawable/border"
            android:padding="5dp" />
        <TextView
            android:id="@+id/m_name_txt"
            android:layout_below="@+id/ed_fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Middle Name"
            android:textSize="18dp"
            android:layout_marginTop="30dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/ed_mname"
            android:layout_below="@id/m_name_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/l_name_txt"
            android:layout_below="@+id/ed_mname"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="18dp"

            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/ed_lname"
            android:layout_below="@+id/l_name_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/email_txt"
            android:layout_below="@id/ed_lname"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="18dp"

            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/ed_email"
            android:layout_below="@id/email_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/contact_txt"
            android:layout_below="@+id/ed_email"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact number"
            android:textSize="18dp"

            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/ed_contact"
            android:layout_below="@id/contact_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/faculty_txt"
            android:layout_below="@id/ed_contact"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faculty"
            android:textSize="18dp"

            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/ed_faculty"
            android:layout_below="@+id/faculty_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/border"
            />
        <TextView
            android:id="@+id/semester_txt"
            android:layout_below="@id/ed_faculty"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Semester"
            android:textSize="18dp"

            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/ed_sem"
            android:layout_below="@id/semester_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:background="@drawable/border"
            />

        <Button
            android:id="@+id/ed_updateBtn"
            android:layout_below="@id/ed_sem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:text="Save Changes"
            />



    </RelativeLayout>


</ScrollView>